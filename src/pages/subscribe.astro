---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Subscribe to Newsletter',
  description: 'Stay updated with our latest insights and updates. Subscribe to our newsletter.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <HeroText
    tagline="Newsletter"
    title="Subscribe to Our Newsletter"
    subtitle="Stay updated with the latest insights, tips, and updates delivered directly to your inbox."
  />

  <!-- Newsletter Subscription Form -->
  <ContactUs
    id="newsletter-form"
    title="Join Our Newsletter"
    subtitle="Get exclusive content and be the first to know about new posts and updates."
    inputs={[
      {
        type: 'text',
        name: 'firstname',
        label: 'First Name',
        placeholder: 'Enter your first name',
        required: true,
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email Address',
        placeholder: 'Enter your email address',
        required: true,
      },
    ]}
    
    disclaimer={{
      label: 'I agree to receive newsletters and marketing communications. I can unsubscribe at any time by clicking the unsubscribe link in any email or by contacting us directly. View our Privacy Policy for more details.',
           
    }}
    button="Subscribe Now"
    description="We respect your privacy. Your information will never be shared with third parties. You can unsubscribe at any time."
   
  />
</Layout>