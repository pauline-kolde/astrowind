---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
---

<WidgetWrapper>
  <form 
    name="contact" 
    method="POST" 
    data-netlify="true" 
    netlify-honeypot="bot-field"
    class="flex flex-col gap-4 max-w-md"
  >
    <!-- Hidden input required for Netlify -->
    <input type="hidden" name="form-name" value="contact" />
    <p class="hidden">
      <label>
        Don’t fill this out if you’re human: <input name="bot-field" />
      </label>
    </p>

    <label>
      Your Name:
      <input type="text" name="name" required class="border p-2 w-full" />
    </label>

    <label>
      Your Email:
      <input type="email" name="email" required class="border p-2 w-full" />
    </label>

    <label>
      Message:
      <textarea name="message" required class="border p-2 w-full"></textarea>
    </label>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">
      Send
    </button>
  </form>
</WidgetWrapper>
